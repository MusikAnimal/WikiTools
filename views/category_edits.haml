%form
  %fieldset.basic
    %label{for: "username"} Username
    %input#username{type: "text", placeholder: "Example", name: "username", required: true, value: params[:username]}
    %input#offset{type: "hidden", name: "offset", value: 0}

  %fieldset.basic
    %label{for: "category"} Categories (separated by pipes)
    %input#category{type: "text", placeholder: "Featured articles|Musical quartets", name: "category", required: true, value: params[:category]}

  %fieldset.options
    %div.checkbox
      %input#contribs{type: "checkbox", name: "contribs", value: "on", checked: contribs}
      %label{for: "contribs"} List contributions
    %div.checkbox
      %input#totals{type: "checkbox", name: "totals", value: "on", checked: params[:totals]}
      %label{for: "totals"} Include individual category counts
    %div.checkbox
      %input#nonautomated{type: "checkbox", name: "nonautomated", value: "on", checked: params[:nonautomated]}
      %label{for: "nonautomated"} Exclude (semi-)automated edits

  %button Submit

%section.output
  %span.another-query &larr; Do another query
  %div.summary-output.result-block
  %ul#contribs.contribs-output.result-block
  %div.contrib-nav
    %div.prev-page &larr; Newer 50
    %div.next-page Older 50 &rarr;

%section.loading
  %div.loading-text Thinking...
  %progress{max: "100", value: "0"}
  %div.progress-report
